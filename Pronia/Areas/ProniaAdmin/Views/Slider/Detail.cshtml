@model Slider
@{
    ViewData["Title"] = "Detail";
}
<div>
    <div>
        <h4>Id: </h4>
        <p>
            @Model.Id
        </p>
    </div>
    <div>
        <h4>Title: </h4>
        <p>
            @Model.Title
        </p>
    </div>
    <div>
        <h4>Subtitle: </h4>
        <p>
            @Model.SubTitle
        </p>
    </div>
    <div>
        <h4>Discount: </h4>
        <p>
            @Model.Discount
        </p>
    </div>
    <div>
        <h4>DiscoverUrl: </h4>
        <p>
            @Model.DiscoverUrl
        </p>
    </div>
    <div>
        <h4>Image: </h4>
        <img style="width:100px"  src="~/assets/images/website-images/@Model.Image"/>
    </div>
</div>